extends layout

block content
  #myCarousel.carousel.slide(data-ride='carousel')
    // Indicators
    ol.carousel-indicators
      li.active(data-target='#myCarousel' data-slide-to='0')
      li(data-target='#myCarousel' data-slide-to='1')
      li(data-target='#myCarousel' data-slide-to='2')
    // Wrapper for slides
    .carousel-inner
      .item.active
        img(src='./images/view1.jpg' alt='' style='height:50% width:100%;')
      .item
        img(src='./images/view4.jpeg' alt='' style=' width:100%;')
      .item
        img(src='./images/view2.jpg' alt='' style='width:100%;')
    // Left and right controls
    a.left.carousel-control(href='#myCarousel' data-slide='prev')
      span.glyphicon.glyphicon-chevron-left
      span.sr-only Previous
    a.right.carousel-control(href='#myCarousel' data-slide='next')
      span.glyphicon.glyphicon-chevron-right
      span.sr-only Next
      //images 
  h2.text-center Men
  .row.px-5.pt-5
    for item in products
      if item.category == 'M'
        .col-md-4.mt-4.mt-sm-0.card-container
          .card.text-center.product.p-4.pt-5.border-0.h-100.rounded-0
            img.img-fluid.d-block.mx-auto(src=`${item.img}` alt=`${item.title}`)
            .card-body.p-4.py-0.h-xs-440p
              a(href=`product/${item.title}`)
                h5.card-title.font-weight-semi-bold.mb-3.w-xl-220p.mx-auto= item.title
              p.price= 'Price: $' + item.price
              

  h2.text-center Women
